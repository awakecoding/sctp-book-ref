DEPEND_FILE=.depend$(OBJDIR):	if [ ! -d $@ ]; then mkdir $@; fi# dummyinstall:: clobber::	-rm -rf $(OBJDIR)clean:: $(OBJDIR)	-rm -f $(OBJDIR)/*depend dep:: $(OBJDIR)	$(CC) $(CFLAGS) -M $(SRCS) | \		sed -e 's,^[ 	]*\(.*\.o\)[ 	]*:,$(OBJDIR)/\1:,' \			> $(OBJDIR)/$(DEPEND_FILE)ifneq ($(DIRS),)lib realclean clean depend::        @for i in $(DIRS); do \	  echo making $@ in $$i; \	  ($(MAKE) -C $$i $@); \	done;endif## include a dependency file if one exists#ifeq ($(OBJDIR)/$(DEPEND_FILE),$(wildcard $(OBJDIR)/$(DEPEND_FILE)))include $(OBJDIR)/$(DEPEND_FILE)endif